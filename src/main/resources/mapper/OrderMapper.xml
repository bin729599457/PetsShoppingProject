<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springboot.demo.dao.OrderMapper" >

    <select id="getAllOrders" resultType="java.util.Map">
        SELECT pets_desc,pets_price,pets_num,pets_img_url,is_hot FROM t_b_pets
        <if test="firstResult!=null">LIMIT #{firstResult},#{maxResults}</if>
    </select>

</mapper>